@page
@model Agenda_UTN.Pages.Categorias.BorrarModel
@{
    ViewData["Title"] = "Borrar Una Categoria";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="text-info">Borrar una Categoría</h2>
            <form method="POST">

                <input type="hidden" asp-for="Categoria.Id" /> <!-- pasa el id del selccionado al OnGet y carga todo magicamente -->

                <div class="mb-3">
                    <!-- PORQUE MUESTRA VALIDACION DE CATEGORIA NOMBRE-->
                    <label asp-for="Categoria.Nombre" class="col-form-label"></label>
                    <input asp-for="Categoria.Nombre" class="form-control" placeholder="Ingresar Nombre" readonly/>
                    <span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Categoria.FechaCreacion" class="col-form-label"></label>
                    <input asp-for="Categoria.FechaCreacion" class="form-control" readonly/>
                    <span asp-validation-for="Categoria.FechaCreacion" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Borrar Categoria</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <a asp-page="Index/" class="btn btn-success"> Volver</a>
        </div>
    </div>
</div>
